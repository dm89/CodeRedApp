<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_task_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nayanbhakta.inceptiveize.CreateTaskPage">

    <TextView
        android:text="Name of The Task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Name of The Task"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:height="40dp"
        android:width="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:id="@+id/button" />

    <Button
        android:text="Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:id="@+id/Image"
        android:layout_below="@+id/InceptiveName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />

    <Button
        android:text="maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maps"
        android:layout_alignBaseline="@+id/Video"
        android:layout_alignBottom="@+id/Video"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp" />

    <Button
        android:text="Video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Video"
        android:layout_alignBaseline="@+id/Image"
        android:layout_alignBottom="@+id/Image"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <TextView
        android:text="Inceptive Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/InceptiveName"
        android:width="250dp"
        android:height="40dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_below="@+id/Name of The Task"
        android:layout_alignLeft="@+id/Name of The Task"
        android:layout_alignStart="@+id/Name of The Task" />

</RelativeLayout>
